@page
@model SejlBåd.Pages.SailingClassPages.SCReceiptModel
@{
    if (HttpContext.Session.GetString("UserRole") == "User")
    {
        ViewData["IsUser"] = true;
    }
    if (HttpContext.Session.GetString("UserRole") == "Admin")
    {
        ViewData["IsAdmin"] = true;
    }
}

<center><h1>Tak for din tilmelding</h1></center>
<center><h5>Vi glæder os til at se dig din labre sømand</h5></center>

<br />

<h2>Junior Hold Medlemmer</h2>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                Fornavn
            </th>
            <th>
                Efternavn
            </th>
            <th>
                Email
            </th>
            <th>
                Tlf
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.JuniorSC != null)
        {
            foreach (var junior in Model.JuniorSC)
            {
                <tr>
                    <td>
                        @junior.FirstName
                    </td>
                    <td>
                        @junior.LastName
                    </td>
                    <td>
                        @junior.Email
                    </td>
                    <td>
                        @junior.Tlf
                    </td>
                    <td>
                        @* <a class="btn btn-primary btn-sm" type="button" title="Edit" asp-page="EditEvent" asp-route-id="@junior.FirstName">Rediger</a> *@
                        <a class="btn btn-danger btn-sm " type="button" title="Delete" asp-page="DeleteEvent" asp-route-id="@junior.FirstName">Slet</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
