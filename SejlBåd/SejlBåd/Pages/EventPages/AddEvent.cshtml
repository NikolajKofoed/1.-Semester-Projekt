@page "/AddEvent"
@model SejlBåd.Pages.EventPages.AddEventModel
@{
}

@* Jeg mangler at implementere funktionaliteten i koden *@
<center><h3>Add Event</h3></center>
<form method="post">
    <div class="form-group">
        <label for="eventName">Event Name</label>
        <input type="text" class="form-control" id="eventName" name="eventName" asp-for="" required>
    </div>

    <div class="form-group">
        <label for="eventDetails">Event Details</label>
        <textarea class="form-control" id="eventDetails" name="eventDetails" rows="3" required></textarea>
    </div>

    <div class="form-group">
        <label for="eventDate">Event Date</label>
        <input type="text" class="form-control" id="eventDate" name="eventDate" required>
    </div>
    <button type="submit" class="btn btn-primary">Add Event</button>
</form>