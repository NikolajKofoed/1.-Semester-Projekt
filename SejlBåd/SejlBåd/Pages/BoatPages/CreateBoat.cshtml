@page
@model SejlBåd.Pages.BoatPages.CreateBoatModel
@{
    if (HttpContext.Session.GetString("UserRole") == "User")
    {
        ViewData["IsUser"] = true;
    }
    if (HttpContext.Session.GetString("UserRole") == "Admin")
    {
        ViewData["IsAdmin"] = true;
    }
}



<div class="login-container">
    <div class="login-form-container">
        <h2>Login Page</h2>
        <form method="post">
    <div class="form-group">
        <label asp-for="Boat.Id" class="control-lable"> Id på båden</label>
        <input asp-for="Boat.Id" class="form-control" />
        <span asp-validation-for="Boat.Id" class="text-danger"></span>
    </div>


    <div class="form-group">
        <input type="submit" value="Tilføj ny båd" class="btn btn-primary" />
    </div>
    </form>
    </div>
</div>