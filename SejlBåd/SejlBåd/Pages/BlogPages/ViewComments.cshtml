@page
@model SejlBåd.Pages.BlogPages.ViewCommentsModel
@{
    if (HttpContext.Session.GetString("UserRole") == "User")
    {
        ViewData["IsUser"] = true;
    }
    if (HttpContext.Session.GetString("UserRole") == "Admin")
    {
        ViewData["IsAdmin"] = true;
    }
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        color: #495057;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    h1 {
        color: #007bff;
    }

    p {
        background-color: #f0f0f0;
        border-radius: 10px;
        padding: 10px;
        margin-bottom: 15px;
    }

    strong {
        font-weight: bold;
    }

    a {
        color: #007bff;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        a:hover {
            color: #0056b3;
        }

    .back-link-container {
        margin-top: 10px;
    }
</style>

<h1>Comments for Blog Post</h1>

@foreach (var comment in Model.Comments)
{
    <p><strong>@comment.Name:</strong> @comment.Message</p>
}

<div class="back-link-container">
    <a asp-page="/BlogPages/GetAllBlogPosts">Back to Blog</a>
</div>
