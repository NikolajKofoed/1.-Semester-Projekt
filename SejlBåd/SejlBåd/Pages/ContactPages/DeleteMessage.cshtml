@page
@model SejlBåd.Pages.ContactPages.DeleteMessageModel
@{
    if (HttpContext.Session.GetString("UserRole") == "User")
    {
        ViewData["IsUser"] = true;
    }
    if (HttpContext.Session.GetString("UserRole") == "Admin")
    {
        ViewData["IsAdmin"] = true;
    }
}

<h1>Bekræft handling</h1>
<div class="alert alert-danger">
    <h5>Er du sikker på du vil slette - '@Model.ContactList.FirstName, @Model.ContactList.LastName'?</h5>
    <p>@Model.ContactList.Message</p>
    <form method="post">
        <button type="submit" class="btn btn-danger">Ja</button>
        <a class="btn btn-primary" asp-page="/ContactPages/GetAllMessages">Nej</a>
    </form>
</div>