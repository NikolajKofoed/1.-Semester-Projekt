@page
@model SejlBåd.Pages.Account.Register.AccountCreatedNoticeModel
@{
}

<style>
    .account-page-container {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa; /* Bootstrap background color */
        text-align: center;
        padding: 50px;
    }

        .account-page-container h2 {
            color: #007bff; /* Bootstrap primary color */
        }

        .account-page-container .btn-primary {
            background-color: #007bff; /* Bootstrap primary color */
            color: #ffffff; /* White text */
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 4px;
            display: inline-block;
            margin-top: 20px;
        }

        .account-page-container label {
            display: block;
            font-weight: bold;
            margin-top: 20px;
        }

        .account-page-container input[readonly] {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
            margin-top: 10px;
            border: 1px solid #ced4da; /* Bootstrap border color */
            border-radius: 4px;
            background-color: #f8f9fa; /* Bootstrap background color */
            color: #495057; /* Bootstrap text color */
        }
</style>

<div class="account-page-container">
    <h2>Grats on new account</h2>
    <label asp-for="Account.Email"></label>
    <input asp-for="Account.Email" readonly="readonly" style="text-align:center"/>
</div>
<br />
<center><a class="btn btn-primary btn-lg" asp-page="/Account/Login">Login</a></center>

