@page
@model SejlBåd.Pages.Account.Register.PasswordModel
@{
}


<div class="account-register-form">
    <br />

    <form method="post">
        <br />
        <div class="account-register-form-input-label">
            <div>
                <label asp-for="Password">Password:</label>
                <input asp-for="Password" type="password" required />
            </div>
            <div>
                <label asp-for="PasswordConfirmation">Password:</label>
                <input asp-for="PasswordConfirmation" type="password" required />
            </div>

            @if(Model.Password != Model.PasswordConfirmation)
            {
                <span class="text-danger">Password must match</span>
            }
        </div>


        <button type="submit">Bekræft</button>
    </form>
</div>