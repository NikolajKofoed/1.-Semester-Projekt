<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa; /* Bootstrap background color */
    }

    .login-container {
        text-align: center;
        margin-top: 50px;
    }

    .login-form-container {
        background-color: #ffffff; /* White background */
        border: 1px solid #ced4da; /* Bootstrap border color */
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Bootstrap box shadow */
        max-width: 400px;
        margin: 0 auto;
    }

        .login-form-container .form-group {
            margin-bottom: 20px;
        }

        .login-form-container label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .login-form-container input {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
            margin-bottom: 10px;
        }

        .login-form-container button {
            background-color: #007bff; /* Bootstrap primary color */
            color: #ffffff; /* White text */
            padding: 10px 20px;
            border: none;
            cursor: pointer;
        }

        .login-form-container a {
            text-decoration: none;
            color: #007bff; /* Bootstrap primary color */
        }
</style>

<div class="login-container">
    <div class="login-form-container">
        <h2>Login Page</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="UserName">Username:</label>
                <input asp-for="UserName" required />
            </div>
            <div class="form-group">
                <label asp-for="Password">Password:</label>
                <input asp-for="Password" type="password" required />
            </div>
            <button type="submit">Login</button>
        </form>
        <p>
            <a class="register-link" asp-page="Register/DateAndCountry">Register</a>
        </p>
    </div>
</div>